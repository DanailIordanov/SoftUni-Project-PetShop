@model PetShopApplication.Models.Pets.DeletePetModel

@{
    ViewBag.Title = "Delete Pet";
}

<h2 class="text-center">Are you sure you want to delete @Model.Name's article?</h2>
<div class="row">
    <div class="col-md-4 col-md-offset-4 mt-60">
        <img src="@Model.ImageUrl" class="img-responsive" />
    </div>
</div>

@using (Html.BeginForm("Delete", "Pets", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <span class="row">
        <input type="submit" value="Delete" class="btn btn-danger col-md-offset-5 col-md-1" />
        <a href="/Pets/Details/@Model.Id" class = "btn btn-default col-md-1" >Cancel</a>
    </span>
}